<a href="/flights/<%= flight._id %>"  >< Back</a>

<br>
<div>Make sure to add your appropriate seat that is available:</div>
<section >
  <% tickets.forEach(function(t) { %>
    <article ><%= t.seat %></article>
  <% }) %>
</section>

<form  action="/flights/<%= flight._id %>/tickets/new" method="POST">
  <label>Seat:
    <input name="seat" pattern="[A-F][1-9]\d?" placeholder="Must be 'A1' thru 'F99'">
  </label><br>

  <label class="form-label">Price:
    <input type="number" name="price">
  </label><br>
  <input type="submit"  value="Add Seat">
</form>
